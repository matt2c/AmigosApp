<div class="row">
  <div class="col s2">
    <a href="/users" ></a>
    <% if @user.image %>
      <%= image_tag( @user.image ) %>
    <% end %>
    <ul>
      <li>Name: <%= @user.name %></li>
      <li>FamilyName: <%= @user.surname %></li>
      <li>Email: <%= @user.email %></li>
      <li>Date of Birth: <%= @user.birthday %></li>
      <li>Relationship Status: <%= @user.relationship %></li>
      <li>From: <%= @user.livingplace %></li>
      <li>Primary Language: <%= @user.language %></li>

      <%= link_to 'Edit Profile', edit_user_path(@user) %>


    </ul>
  </div>
  <div class="col s8">
    activities

    <div class="row">
      <% @acitivites.each do |activity| %>
      <%= activity.id %> :
      <%= activity.name %></br>
      <% end %>
    </div>

  </div>
  <div class="col s2">
    right panel
  </div>
</div>
<div>

<% if @current_user.present? && @current_user.id == @user.id %>
<% end %>

</div>
