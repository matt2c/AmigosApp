<%= form_for(@activity, :html => { :multipart => true }) do |f| %>
  <p>
    <%= f.label :activity_name %>
    <%= f.text_field :name, required: true %>
  </p>
  <p>
    <%= f.label :event_date %>
    <%= f.date_field :event_date, required: true %>
  </p>
  <p>
    <%= f.label :event_time %>
    <%= f.time_field :event_time, required: true %>
  </p>
  <p>
    <%= f.label :description %>
    <%= f.text_field :description %>
  </p>
  <p>
    <%= f.label :location %>
    <%= f.text_field :location %>
  </p>
  <p>
    <%= f.label :image %>
    <%= f.file_field :image %>
  </p>
  <a class="waves-effect waves-light btn"><%= f.submit "Update"%></a>

  <% end %>
