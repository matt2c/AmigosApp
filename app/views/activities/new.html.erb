<%= form_for(@activity, :html => { :multipart => true }) do |f| %>
  <p>
    <%= f.label :activity_name %>
    <%= f.text_field :name, required: true %>
  </p>
  <p>
    <%= f.label :event_date %>
    <%= f.date_field :event_date, required: true %>
  </p>
  <p>
    <%= f.label :event_time %>
    <%= f.time_field :event_time, required: true %>
  </p>
  <p>
    <%= f.label :description %>
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.label :location %>
    <%= f.text_field :location %>
  </p>
  <p>
    <%= f.label :image %>
    <%= f.file_field :image, required: true %>
  </p>
  <p>
    <div class="chips chips-autocomplete"></div>
    <!-- <input type="text" class="chips-autocomplete"> -->
  </p>
  <script>
  // $('.chips-autocomplete').autocomplete({
  //   source: [ "c++", "java", "php", "coldfusion", "javascript", "asp", "ruby" ]
  // });
  $('.chips-autocomplete').material_chip({
    autocompleteOptions: {
      data: {
        'Apple': null,
        'Microsoft': null,
        'Google': null
      },
      limit: Infinity,
      minLength: 1
    }
  });
  </script>
  <a class="waves-effect waves-light btn"><%= f.submit "Create an Activity"%></a>

  <% end %>
