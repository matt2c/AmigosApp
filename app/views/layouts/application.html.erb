<!DOCTYPE html>
<html>
  <head>
    <title>AmigosApp</title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <!--Import Google Icon Font-->
    <link href="http://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">


    <!-- <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script> -->
</head>

  <body>
     <nav>
       <div class="nav-wrapper">
         <a href="/" class="brand-logo"><img src="http://i.imgur.com/LVNUafM.png"></a>
         <ul id="nav-mobile" class="right hide-on-med-and-down">
           <% if @current_user %>
           <li><%= link_to @current_user.email, user_path(@current_user) %><li>
           <li><%= link_to "My activities", user_activities_path(@current_user) %></li>
           <li><a href="/logout">LogOut</a></li>
           <% else %>
           <li><a href="/login">LogIn</a></li>
           <li><a href="/users/new">SignUp</a></li>
           <% end  %>
         </ul>
       </div>
     </nav>

    <%= yield %>
  </body>
</html>
